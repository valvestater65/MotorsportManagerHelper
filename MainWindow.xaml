<mah:MetroWindow
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" 
    x:Class="MotorsportManagerHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MotorsportManagerHelper"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    mc:Ignorable="d"
        Title="Motorsport Manager Helper" Height="800" Width="1000">

    <mah:MetroWindow.Flyouts>
        <mah:FlyoutsControl>
            <mah:Flyout Name="mnuFlyout" Header="Settings" Position="Left" Width="200" Theme="Adapt">
                <DockPanel>
                    <Label Content="Test"/>
                </DockPanel>
            </mah:Flyout>
        </mah:FlyoutsControl>
    </mah:MetroWindow.Flyouts>
    <DockPanel>
        <Frame Name="mainAppFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
    
</mah:MetroWindow>
